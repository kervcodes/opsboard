generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// User model
model User {
  id        String          @id @default(uuid())
  name      String?
  email     String          @unique
  role      Role            @default(MEMBER)
  createdAt DateTime        @default(now())
  actor     IncidentEvent[]

  createdIncidents Incident[] @relation("IncidentCreator")
  ownedIncidents   Incident[] @relation("IncidentOwner")
  comments         Comment[]  @relation("CommentAuthor")
}

// Comment model
model Comment {
  id         String   @id @default(uuid())
  incidentId String
  incident   Incident @relation(fields: [incidentId], references: [id])

  authorId String
  author   User   @relation("CommentAuthor", fields: [authorId], references: [id])

  message String

  createdAt DateTime @default(now())
}

// Incident model
model Incident {
  id          String @id @default(uuid())
  title       String
  description String

  severity Severity?
  status   Status    @default(OPEN)

  ownerId String
  owner   User   @relation("IncidentOwner", fields: [ownerId], references: [id])

  createdById String
  createdBy   User   @relation("IncidentCreator", fields: [createdById], references: [id])

  comments Comment[]
  events   IncidentEvent[]

  version Int @default(1)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  MEMBER
}

enum Status {
  OPEN
  INVESTIGATING
  IDENTIFIED
  MITIGATED
  RESOLVED
  CLOSED
  DISCARDED
}

enum Severity {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum CommentType {
  USER_UPDATE
  SYSTEM_EVENT
}

enum EventType {
  STATUS_CHANGED
  SEVERITY_CHANGED
  OWNER_CHANGED
}

model IncidentEvent {
  id         String   @id @default(uuid())
  incidentId String
  incident   Incident @relation(fields: [incidentId], references: [id])

  actorId String?
  actor   User?   @relation(fields: [actorId], references: [id])

  eventType EventType
  metadata  Json

  createdAt DateTime @default(now())
}
