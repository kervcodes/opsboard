generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// User model
model User {
  id        String   @id @default(uuid())
  name      String?
  email     String   @unique
  role      Role     @default(MEMBER)
  createdAt DateTime @default(now())

  createdIncidents Incident[] @relation("IncidentCreator")
  ownedIncidents   Incident[] @relation("IncidentOwner")
  comments         Comment[]  @relation("CommentAuthor")
}

// Comment model
model Comment {
  id String @id @default(uuid())

  incidentId String
  incident   Incident @relation("IncidentComments", fields: [incidentId], references: [id], onDelete: Cascade)

  authorId String
  author   User   @relation("CommentAuthor", fields: [authorId], references: [id])

  message String
  type    CommentType @default(SYSTEM_EVENT)

  createdAt DateTime  @default(now())
  editedAt  DateTime?
  isEdited  Boolean   @default(false)

  @@index([incidentId])
}

// Incident model
model Incident {
  id          String   @id @default(uuid())
  title       String
  description String
  severity    Severity
  status      Status   @default(OPEN)

  slaTargetMinutes  Int?
  currentSlaStartAt DateTime @default(now())

  ownerId     String
  owner       User   @relation("IncidentOwner", fields: [ownerId], references: [id])
  createdById String
  createdBy   User   @relation("IncidentCreator", fields: [createdById], references: [id])

  acknowledgedAt DateTime?
  resolvedAt     DateTime?
  closedAt       DateTime?

  version Int @default(1)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  comments Comment[] @relation("IncidentComments")

  @@index([status])
  @@index([severity])
  @@index([ownerId])
}

enum Role {
  ADMIN
  MEMBER
}

enum Status {
  OPEN
  INVESTIGATING
  IDENTIFIED
  MITIGATED
  RESOLVED
  CLOSED
  DISCARDED
}

enum Severity {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum CommentType {
  SYSTEM_EVENT
  USER_UPDATE
}
